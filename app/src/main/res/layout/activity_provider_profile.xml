<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderProfileActivity"
    android:orientation="vertical"
    android:background="#20A090">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/providerProfileBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:src="@drawable/ic_arrow_back_brown" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sample_doctor_image" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_username_umar_manzoor"
            android:fontFamily="@font/inter"
            android:textColor="#20A090"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="5"
            android:numStars="5"
            android:rating="4"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_username"
            android:textColor="#20A090"
            android:fontFamily="@font/inter"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>

        <!-- For contacting and other options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_message_outline_white"
                    android:background="#20A090"
                    android:padding="7dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_video_outline_white"
                    android:background="#20A090"
                    android:padding="7dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_outline_white"
                    android:background="#20A090"
                    android:padding="7dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#20A090"
                    android:padding="7dp"
                    android:src="@drawable/ic_more_white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_remove_24_gray"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:textColor="#344A4F"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_username_umar_manzoor"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#20A090"
            android:fontFamily="@font/inter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#344A4F"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_umar_manzoor_email"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#20A090"
            android:fontFamily="@font/inter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#344A4F"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرياض المملكة العربية السعودية"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#20A090"
            android:fontFamily="@font/inter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#344A4F"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+9665633211"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#20A090"
            android:fontFamily="@font/inter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:textColor="#20A090"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="20dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/no_image" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@id/providerProfileMoreImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/no_image"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/providerProfileMoreImageView"
                        android:layout_alignTop="@+id/providerProfileMoreImageView"
                        android:layout_alignEnd="@+id/providerProfileMoreImageView"
                        android:layout_alignBottom="@+id/providerProfileMoreImageView"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="@string/_255"
                        android:textColor="@color/white"
                        android:background="#99000000"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>